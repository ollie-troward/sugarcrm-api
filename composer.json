{
  "name": "troward/sugarcrm-api",
  "description": "SugarCRM 7 REST API Wrapper",
  "keywords": ["sugarcrm", "7", "rest", "api", "wrapper", "oauth", "troward"],
  "type": "library",
  "license": "MIT",
  "authors": [
    {
      "name": "Ollie Troward",
      "email": "ollie@ollietroward.com",
      "homepage": "http://ollietroward.com",
      "role": "Developer"
    }
  ],
  "require": {
    "php": ">=5.4.0",
    "guzzlehttp/guzzle": "^5.2"
  },
  "require-dev": {
    "phpspec/phpspec": "2.0",
    "phpspec/nyan-formatters": "1.*"
  },
  "autoload": {
    "psr-4": {
      "Troward\\SugarAPI\\": "src/Troward/SugarAPI/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "spec\\": "spec/"
    }
  },
  "config": {
    "preferred-install": "dist"
  },
  "minimum-stability": "stable"
}
